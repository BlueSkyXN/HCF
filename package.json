{
  "name": "hcf-device-detector",
  "version": "1.0.0",
  "description": "Hardware Capability Fingerprinting Device Detector - 先进的设备检测工具，通过多重信号分析技术准确识别用户的操作系统和设备特征",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "npx serve . -l 8000",
    "dev": "npx serve . -l 8000 --cors",
    "build": "node scripts/build.js",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test tests/e2e",
    "validate": "npm run lint && npm run test",
    "serve": "npx serve .",
    "preview": "npm run serve"
  },
  "keywords": [
    "device-detection",
    "fingerprinting",
    "webgl",
    "nfc",
    "operating-system",
    "browser-detection",
    "hardware-capabilities",
    "ios-detection",
    "android-detection",
    "macos-detection",
    "windows-detection",
    "linux-detection"
  ],
  "author": {
    "name": "HCF Team",
    "email": "team@hcf2023.top",
    "url": "https://hcf2023.top"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hcf-team/device-detector.git"
  },
  "bugs": {
    "url": "https://github.com/hcf-team/device-detector/issues"
  },
  "homepage": "https://hcf2023.top",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "prettier": "^3.0.0",
    "serve": "^14.0.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0"
  },
  "files": [
    "src/",
    "index.html",
    "LICENSE",
    "README.md"
  ],
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "exports": {
    ".": "./index.html",
    "./engine": "./src/js/detector/engine.js",
    "./webgl": "./src/js/detector/webgl.js",
    "./nfc": "./src/js/detector/nfc.js",
    "./media": "./src/js/detector/media.js",
    "./utils": "./src/js/utils/dom.js",
    "./styles": "./src/css/main.css"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/hcf-device-detector"
  },
  "config": {
    "port": 8000,
    "host": "localhost"
  },
  "volta": {
    "node": "18.18.0",
    "npm": "9.8.1"
  }
}